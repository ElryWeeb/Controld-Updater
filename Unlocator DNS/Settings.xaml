<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unlocator_DNS.Settings"
             Shell.NavBarIsVisible="false">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,30"
            VerticalOptions="Center">

            <Image Source="logo.jpg"
                   HeightRequest="64" />

            <Label FontSize="22" FontAttributes="Bold" Text="Unlocker IP Updater" />

            <Entry x:Name="ApiKey" Style="{StaticResource CommonEntryStyle}" />

            <HorizontalStackLayout>
                <Label x:Name="Warning" FontSize="20" Text="Update on Mobile"/>

                <CheckBox x:Name="Mobile" CheckedChanged="Mobile_CheckedChanged"/>
            </HorizontalStackLayout>

            <Button Text="Save" Clicked="Save_Button_Clicked" />

            <Button ImageSource="Images/undo.png" Clicked="Revert_Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>