<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unlocator.MainPage"
             Shell.NavBarIsVisible="false">

    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="30,30"
            VerticalOptions="Center">

            <Image Source="unlocator.png"
                   HeightRequest="100" />

            <Label FontSize="24" FontAttributes="Bold" Text="Dynamic IP Updater" HorizontalOptions="Center" TextColor="White" />

            <Label x:Name="IP" FontSize="20" Text="No IP Detected" HorizontalOptions="Center" TextColor="CornflowerBlue"/>

            <Label x:Name="Connection" FontSize="20" Text="Not Connected" HorizontalOptions="Center" TextColor="Red" />

            <Button x:Name="Connect" Text="Connect" Clicked="Connect_Clicked" IsVisible="false" TextColor="White" FontSize="20"/>

            <Button x:Name="Setup" Text="Set up your Unlocator Token" Clicked="Setup_Clicked" IsVisible="false" TextColor="White" FontSize="20"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
